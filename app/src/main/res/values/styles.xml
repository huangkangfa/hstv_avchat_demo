<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowFullscreen">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <!-- 欢迎界面主题 -->
    <style name="WelcomeEntranceActionBarTheme" parent="AppTheme">
        <item name="android:windowFullscreen">true</item>
        <item name="android:background">@mipmap/bg_welcome</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="DefaultShowTextStyle">
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="DefaultEditTextStyle">
        <item name="android:background">@drawable/bg_color_edit</item>
        <item name="android:layout_width">345dp</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:textColorHint">#B4FFFFFF</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="DefaultButtonStyle">
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">46dp</item>
        <item name="android:background">@drawable/button_bg</item>
        <item name="android:focusable">true</item>
        <item name="android:gravity">center</item>
        <item name="android:orientation">horizontal</item>
    </style>
    <style name="DefaultButtonInnerTextStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>
    <style name="DefaultButtonInnerImageStyle">
        <item name="android:layout_width">18dp</item>
        <item name="android:layout_height">18dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

</resources>